<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/transaction_list_row_stamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/transaction_list_row_delete"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="D"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/transaction_list_row_edit"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="E"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/transaction_list_row_delete"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/transaction_list_row_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transaction_list_row_stamp" />

    <TextView
        android:id="@+id/transaction_list_row_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/transaction_list_row_amount" />

</androidx.constraintlayout.widget.ConstraintLayout>